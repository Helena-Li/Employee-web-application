@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee List";
    var name = Model.ElementAt(1).Name;
}

<div class="card-deck">
    @foreach (var item in Model)
    {
        var imgPath = "~/images/" + (item.PhotoPath ?? "sara.jpg");
    <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
        <div class="card-header">
            <h3>@item.Name</h3>
        </div>
        <img src=@imgPath asp-append-version="true" class="card-img-top imageFormat" />
        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary m-1">View</a>
            <a asp-action="edit" asp-controller="home" asp-route-id="@item.Id" class="btn btn-primary m-1">Edit</a>
            <a asp-action="edit" asp-controller="home" asp-route-id="@item.Id" class="btn btn-danger m-1">Delete</a>
        </div>
    </div>
    }
</div>

