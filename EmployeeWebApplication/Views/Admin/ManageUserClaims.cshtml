@model UserClaimsViewModel;

<form method="post" class="mt-3">
    <div class="card">
        <div class="card-header">
            <h3>Manage User Claims</h3>
        </div>
        <div class="card-body">
            <input hidden asp-for="@Model.UserId" />
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="edituser" asp-controller="admin" asp-route-Id="@Model.UserId" class="btn btn-primary" style="width:auto">
                Cancel
            </a>
        </div>
    </div>
</form>