@model List<UserRolesViewModel>;
@{
    var userId = ViewBag.UserId;
    var userName = ViewBag.UserName;
}

<h1>@userName</h1>

<form method="post" class="mt-3">
    <div class="card">
        <div class="card-header">
            <h3>Manage User Roles</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model[i].RoleId" />
                    <input hidden asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="edituser" asp-controller="admin" asp-route-Id="@userId" class="btn btn-primary" style="width:auto">
                Cancel
            </a>
        </div>
    </div>
</form>