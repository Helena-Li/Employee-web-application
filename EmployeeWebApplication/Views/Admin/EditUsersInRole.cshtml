@model List<UserRoleViewModel>;
@{
    var roleId = ViewBag.RoleId;
    var roleName = ViewBag.RoleName;
}

<h1>@roleName</h1>

<form method="post" class="mt-3">
    <div class="card">
        <div class="card-header">
            <h3>Add or remove users in this role</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input hidden asp-for="@Model[i].UserId" />
                    <input hidden asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="editrole" asp-controller="admin" asp-route-Id="@roleId" class="btn btn-primary" style="width:auto">
                Cancel
            </a>
        </div>
    </div>
</form>